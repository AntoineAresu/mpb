{% extends 'base.html.twig' %}

{% block title %}BugReport{% endblock %}


{% block body %}
    {{ include('bug_report/_back_to_list_button.html.twig') }}
    <h1>{{ bug_report.title }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ bug_report.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ bug_report.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ bug_report.content|raw }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ bug_report.createdAt ? bug_report.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ bug_report.updatedAt ? bug_report.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        {% if bug_report.status %}
        <tr>
            <th>Status</th>
            <td>{{ bug_report.status.name }}</td>
        </tr>
        {% endif %}
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('bug_report_edit', {'id': bug_report.id}) }}"><i
                class="fas fa-pencil-alt"></i></a>

    {{ include('bug_report/_delete_form.html.twig') }}
{% endblock %}
