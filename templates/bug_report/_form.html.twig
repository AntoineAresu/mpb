{{ form_start(form) }}

<div class="row">
    <div class="col-12">
        <div class="form-floating">
            {{ form_widget(form.title) }}
            {{ form_label(form.title) }}
        </div>
        <hr class="text-primary my-3">
    </div>
    <div class="col-12 my-3">
        {{ form_row(form.content) }}
    </div>
    <div class="col-12 col-sm-6 col-md-8">
        <div class="row">
            <div class="col-12 col-md-6">
                {{ form_row(form.application) }}
            </div>
            <div class="col-12 col-md-6">
                {{ form_row(form.accountType) }}
            </div>
            <div class="col-12 col-md-4">
                {{ form_row(form.accountId) }}
            </div>
            <div class="col-12 col-md-8">
                {{ form_row(form.url) }}
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-md-4 mt-3 d-flex">
        <button class="btn btn-primary btn-lg flex-grow-1">{{ button_label }}</button>
    </div>
    {{ form_end(form) }}
