<div class="row mt-4">
    {% if is_granted('UPDATE', bug) %}
        <div class="col">
            <a class="btn btn-warning"
               href="{{ path('bug_edit', {id: bug.id}) }}"
               data-turbo="false"
            >
                <i class="fas fa-pencil-alt px-1"></i>{{ 'edit'|trans }}
            </a>
        </div>
    {% endif %}
    {% if is_granted('DELETE', bug) %}
        <div class="col">
            {{ include('bug/_delete_form.html.twig') }}
        </div>
    {% endif %}
</div>
