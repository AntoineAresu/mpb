<form method="post" class="d-flex" action="{{ path('bug_delete', {'id': bug.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bug.id) }}">
    <button class="btn btn-danger ms-auto"><i class="fas fa-trash px-1"></i>{{ 'delete'|trans }}</button>
</form>
