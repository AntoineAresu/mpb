<div class="row">
    {% if done != true %}
        <a href="{{ path('bugs_list', {'done': true}) }}" class="btn btn-success mt-4">
            Voir les bugs résolus
        </a>
    {% else %}
        <a href="{{ path('bugs_list') }}" class="btn btn-warning mt-4">
            Voir les bugs non résolus
        </a>
    {% endif %}
</div>
