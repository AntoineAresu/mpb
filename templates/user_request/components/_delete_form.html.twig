{% if is_granted('DELETE', userRequest) %}
    <form method="post" class="d-flex" action="{{ path(action, {'id': userRequest.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ userRequest.id) }}">
        <button class="btn btn-danger ms-auto"><i class="fas fa-trash px-1"></i>{{ 'delete'|trans }}</button>
    </form>
{% endif %}
