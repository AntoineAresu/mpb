{% extends 'base.html.twig' %}

{% block title %}{{ 'features_list'| trans }}{% endblock %}

{% block body %}
    <div {{ stimulus_controller('search') }}>
        <div class="row">
            <div class="col flex-grow-1">
                {{ form_start(searchForm, {'attr': {'data-search-target': 'form'}}) }}
                {{ form_end(searchForm) }}
            </div>
            <div class="mt-2 mt-sm-0 col-12 col-sm-4 col-md-4 col-lg-3 d-flex">
                <a class="btn btn-primary flex-grow-1"
                   href="{{ path('feature_new') }}">{{ 'propose_new_feature'|trans }}</a>
            </div>
        </div>
        <div class="container py-3 px-4">
            <div class="row">
                <div class="col-12 col-sm-10">
                    {{ include('common/_toggle_application_buttons.html.twig', {applications, route : 'features_list'}) }}
                </div>
                <div class="col-12 col-sm-2 d-flex justify-content-center align-items-center">
                    {{ include('common/_toggle_done.html.twig', {route : 'features_list', done}) }}
                </div>
            </div>
            <div {{ stimulus_target('search', 'container') }}>
                {{ include('feature/components/_list.html.twig',{features} ) }}
            </div>
        </div>
    </div>
{% endblock %}
