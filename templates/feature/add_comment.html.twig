{% extends 'base.html.twig' %}

{% block title %}{{ 'add_comment'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
                <a class="btn btn-light mb-4" href="{{ path('feature_show', {'id': feature.id}) }}">
                    <i class="fa fa-chevron-left"></i>
                    {{ 'back_to_feature'|trans }}
                </a>
                <h1>{{ feature.title }}</h1>
                <hr/>
                {{ include('feature/_comments.html.twig', {feature}) }}

                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
